<html>

<body>

    <%- include('../partials/admin-header.ejs') %>
        <section class="content-main">
            <div class="content-header">
                <a href="javascript:history.back()"><i class="material-icons md-arrow_back"></i> Go back </a>
            </div>
            <%= console.log(coupons); %>
                <div class="content-header">

                    <h2 class="content-title">Coupon </h2>
                    <div>
                        <a href="/admin/getAddNewCoupon" class="btn btn-primary"><i class="material-icons md-plus"></i>
                            Add New Coupon </a>
                    </div>

                </div>
                <div class="card mb-4">
                    <header class="card-header">
                        <div class="row gx-3">
                            <div class="col-lg-4 col-md-6 me-auto">
                                <input type="text" placeholder="Search..." class="form-control">
                            </div>

                        </div>
                    </header> <!-- card-header end// -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Coupon Code</th>
                                        <th>Discount</th>
                                        <th>Max Discount</th>
                                        <th>Expiry Date</th>
                                   
                                        <th class="text-end"> Action </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let counter = 1; %>
                                    <% for (let i = 0; i < coupons.length; i++) { %>
                                        <tr>
                                            <td><%= counter %></td>
                                            <td width="40%">
                                                <div class="info pl-3">
                                                    <h6 class="mb-0 title">
                                                        <h6><%= coupons[i].code %></h6>
                                                    </h6>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="info">
                                                    <h6 class="mb-0 title">
                                                        <h6>Rs.<%= coupons[i].discount %></h6>
                                                    </h6>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="info pl-3">
                                                    <h6 class="mb-0 title">
                                                        <h6>Rs.<%= coupons[i].maxdiscount %></h6>
                                                    </h6>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="info pl-3">
                                                    <h6 class="mb-0 title">
                                                        <h6><%= coupons[i].expirationDate.toLocaleDateString() %></h6>
                                                    </h6>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="">
                                                    <button class="btn btn-info btn-sm rounded">Edit</button>
                                                </a>
                                                
                                           
                                                <a href="">
                                                    <button class="btn  btn-sm rounded btn-danger">Delete</button>
                                                </a>
                                            </td>
                                        </tr>
                                        <% counter++; %>
                                    <% } %>
                                </tbody>
                                
                            </table> <!-- table-responsive.// -->
                        </div>
                    </div> <!-- card-body end// -->
                </div> <!-- card end// -->
                <div class="pagination-area mt-15 mb-50">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-start">
                            <li class="page-item active"><a class="page-link" href="#">01</a></li>

                            <li class="page-item"><a class="page-link" href="#"><i
                                        class="material-icons md-chevron_right"></i></a></li>
                        </ul>
                    </nav>
                </div>
        </section> <!-- content-main end// -->
        <%- include('../partials/admin-footer.ejs') %>



</body>


</html>