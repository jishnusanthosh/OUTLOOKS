    <!-- Style -->
    <link rel="stylesheet" href="/login/css/style.css">

    <style>
      .btn-login {
        background-color: #6c757d;
      }

      .btn-login:hover {
        background-color: rgb(245, 245, 245);
      }

      .content {
        background-image: url('../../../login/image/h1_hero.jpg.webp');
        background-repeat: no-repeat;
        background-size: cover;
