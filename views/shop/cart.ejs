<%- include('../shop/layout/user-header.ejs') %>
    <!-- Header Info Begin -->
    <link rel="stylesheet" href="/AddOnStyles/toastr.css">
    <style>
        .clear-bt {
            margin-top: 10px;
            padding: 10px 20px;
            font-size: 16px;
            height: 45px;
        }

        #toastr-container>.toast-error {
            background-color: #FFDDDD;
            color: red;
        }

        #toastr-container>.toast-success {
            background-color: #DDFFDD;
            color: green;
        }
